@model Restaurant.ViewModels.HomeModels
@{
    ViewData["Title"] = "Contact";
    Layout = "_LayoutForAllPage";
}

<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/breath.jpg);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>Contact us</h3>
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-message-wrapper">
                    <h4 class="contact-title mb-25">Leave Us a Message</h4>
                    <div class="contact-message">
                        <form asp-action="CreateTransactionContactUs" enctype="multipart/form-data" >
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactU.TransactionContactUsFullName" name="name" placeholder="Full Name" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactU.TransactionContactUsEmail" name="email" placeholder="Email Address" type="email">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactU.TransactionContactUsSubject" name="subject" placeholder="Subject" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style">
                                        <textarea asp-for="TransactionContactU.TransactionContactUsMessage" name="message" placeholder="Message"></textarea>
                                        <button class="submit btn-style" type="submit">SEND MESSAGE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info-area">
                    <h4 class="contact-title mb-18">Contact Us</h4>
                    <p>Lorem ipsum dolor sit amet, conse ncteturll adipisicing elit, sed do eiusmod </p>
                    <div class="contact-info-wrap">
                         @foreach (var item in Model.ListMasterContactUsInformation)
                            {
                            <div class="single-contact-info mb-40">
                           
                                    <div class="contact-info-icon">
                                        @Html.Raw(item.MasterContactUsInformationImageUrl)
                                    </div>
                                    <div class="contact-info-content">
                                         @Html.Raw(item.MasterContactUsInformationRedirect)
                                         @Html.Raw(item.MasterContactUsInformationIdesc)
                                    </div>
                          
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
        <div class="map-area pt-100">
            <div id="googleMap"></div>
        </div>
    </div>
</div>




