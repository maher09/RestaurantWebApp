                @Html.DisplayFor(modelItem => item.CreateId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SystemSettingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SystemSettingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SystemSettingId">Delete</a>
            </td>
