@model Restaurant.Areas.Admin.ViewModel.MVMasterOffer

@{
    ViewData["Title"] = "Edit";
}




<div class="pagetitle">
    <h1>Master Offer</h1>

    <nav>

        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterOffer">Master Offer</a></li>

            <li class="breadcrumb-item active">Edit</li>
        </ol>

    </nav>

</div>




<section class="section">
    <div class="row">
        <div class="col-lg-12">


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title m-0"></h5>
                    <form asp-action="Edit" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-6">
                            <label asp-for="MasterOfferId" class="control-label"></label>
                            <input asp-for="MasterOfferId" readonly class="form-control" />
                            <span asp-validation-for="MasterOfferId" class="text-danger"></span>

                        </div>

                        <div class="col-md-6">
                            <label asp-for="MasterOfferTitle" class="control-label"></label>
                            <input asp-for="MasterOfferTitle" class="form-control" />
                            <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>

                        </div>
                        <div class="col-md-6">
                            <label asp-for="MasterOfferBreef" class="control-label"></label>
                            <input asp-for="MasterOfferBreef" class="form-control" />
                            <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>

                        </div>

                        <div class="col-md-6">
                            <label asp-for="MasterOfferDesc" class="control-label"></label>
                            <input asp-for="MasterOfferDesc" class="form-control" />
                            <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
                        <div class="col-6">
                                <label asp-for="File" class="control-label"></label>
                                <input asp-for="File" class="form-control" />
                                <span asp-validation-for="File" class="text-danger"></span>

                        </div>
                        


                        <div class="form-group text-end">

                            <a asp-action="Index" class="btn btn-success">Back</a>
                            <input type="submit" value="Submit" class="btn btn-primary" />

                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>






