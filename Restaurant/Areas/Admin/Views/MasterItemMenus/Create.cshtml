@model Restaurant.Areas.Admin.ViewModel.MVMasterItemMenu
@{
    ViewData["Title"] = "Create";
}



<div class="pagetitle">
    <h1>Master Item Menu</h1>

    <nav>

        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterItemMenu">Master Item Menu</a></li>

            <li class="breadcrumb-item active">Create</li>
        </ol>

    </nav>

</div>




<section class="section">
    <div class="row">
        <div class="col-lg-12">


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title m-0"></h5>

                    <form class="row g-3" asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-6">

                            <label asp-for="MasterCategoryMenuId" class="control-label"></label>
                            @*  <input asp-for="CategoryId" class="form-control" /> *@
                            @*    <select asp-for="CategoryId" class=" form-select">

                            @foreach (var item in ViewBag.Btatata)
                            {
                            <option value="@item.CategoryId">@item.CategoryName</option>
                            }
                            </select> *@

                            <select asp-for="MasterCategoryMenuId" class="form-select">
                                @if (ViewBag.Data != null && ViewBag.Data.Count > 0)
                                {
                                    <option value="">Select a category</option>
                                    @foreach (var item in ViewBag.Data)
                                    {
                                        <option value="@item.MasterCategoryMenuId">@item.MasterCategoryMenuName</option>
                                    }
                                }
                                else
                                {
                                    <option value="">No categories available</option>
                                }
                            </select>




                            <span asp-validation-for="MasterCategoryMenuId" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="MasterItemMenuTitle" class="control-label"></label>
                            <input asp-for="MasterItemMenuTitle" class="form-control" />
                            <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
                            
                        </div>
                        <div class="col-6">
                                <label asp-for="MasterItemMenuBreef" class="control-label"></label>
                                <input asp-for="MasterItemMenuBreef" class="form-control" />
                                <span asp-validation-for="MasterItemMenuBreef" class="text-danger"></span>
                        </div>

                        <div class="col-6">
                                <label asp-for="MasterItemMenuDesc" class="control-label"></label>
                                <input asp-for="MasterItemMenuDesc" class="form-control" />
                                <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
                        </div>

                        <div class="col-6">
                                <label asp-for="MasterItemMenuPrice" class="control-label"></label>
                                <input asp-for="MasterItemMenuPrice" class="form-control" />
                                <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
                        </div>


                        <div class="col-6">
                                <label asp-for="MasterItemMenuDate" class="control-label"></label>
                                <input asp-for="MasterItemMenuDate" class="form-control" />
                                <span asp-validation-for="MasterItemMenuDate" class="text-danger"></span>
                        </div>

                        <div class="col-6">
                                <label asp-for="File" class="control-label"></label>
                                <input asp-for="File" class="form-control" />
                                <span asp-validation-for="File" class="text-danger"></span>
                        </div>



                        <div class="form-group text-end">

                            <a asp-action="Index" class="btn btn-success">Back</a>
                            <input type="submit" value="Create" class="btn btn-primary" />

                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>

</section>




